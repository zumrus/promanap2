= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :content
    %br/
    = f.text_area :content
  .field
    = f.label :status
    %br/
    = f.check_box :status
  .field
    = f.label :project_id
    %br/
    = f.select(:project_id, options_from_collection_for_select((Project.all), :id, :name))
  .actions
    = f.submit
