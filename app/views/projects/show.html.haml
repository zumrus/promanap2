.projheaddiv
  Project: 
  = @project.name
  %br
  Users:
  - @project.users.each do |u|
    = u.name
    %br

%h3 Listing tasks
- @project.tasks.each do |task|
  .taskdiv
    %b= task.name
    %br
    %textarea= task.content
    %br
    Status:
    = task.donetodo
    
    
    

= link_to 'Listing of all tasks', tasks_path
%br= link_to 'Back', projects_path
